# set wallpaper
exec feh --bg-scale ~/code/dotfiles/wallpaper/current &

# lock the screen after 10 minutes
exec xautolock -time 10 -locker i3lock &

# start network manager applet, network-manager is started in restart-nm.sh
exec ~/code/dotfiles/scripts/restart-nm.sh
exec nm-applet

# assign classes to workspaces
assign [class="jetbrains-webstorm"] → 3 code
assign [class="Meld"] → 7 meld
assign [class="Pidgin"] → 8 chat

# need to source xresources here to run urxvt
exec xrdb ~/.Xresources

# https://faq.i3wm.org/question/3447/race-condition-for-startup-applications/index.html
for_window [title="wherewolf-startup"] move workspace 1 work
for_window [title="personal-startup"] move workspace 4 brws
exec google-chrome --profile-directory=Profile\ 1 file:///wherewolf-startup
exec google-chrome --profile-directory=Default file:///personal-startup

exec --no-startup-id i3-msg 'workspace 2 serv; append_layout ~/code/dotfiles/i3/workspace/2-serv.json'
exec --no-startup-id i3-msg 'workspace 2 serv; exec urxvt; exec urxvt; exec urxvt;'
exec --no-startup-id i3-msg 'workspace 5 term; append_layout ~/code/dotfiles/i3/workspace/5-term.json'
exec --no-startup-id i3-msg 'workspace 5 term; exec urxvt; exec urxvt; exec urxvt; workspace 5 term'
exec --no-startup-id i3-msg 'workspace 8 chat; append_layout ~/code/dotfiles/i3/workspace/8-chat.json'


