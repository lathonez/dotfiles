
# echo $reason >> /tmp/reason

# restart pidgin when we get a bound dhcp connection
if [ $reason == "BOUND" ]; then
	killall pidgin
	export XAUTHORITY=/home/lathonez/.Xauthority
	export DISPLAY=:0.0
	su -c "export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus && pidgin" -s /bin/bash lathonez &
fi
